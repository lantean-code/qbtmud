@page "/search"
@layout OtherLayout
<div class="content-panel">
    <div class="content-panel__toolbar">
        <MudToolBar Gutters="false" Dense="true">
            @if (!DrawerOpen)
            {
                <MudIconButton Icon="@Icons.Material.Outlined.NavigateBefore" OnClick="NavigateBack" title="@TranslateSearch("Back to torrent list")" />
                <MudDivider Vertical="true" />
            }
            <MudDivider Vertical="true" />
            <MudText Class="px-5 no-wrap">@WebUiLocalizer.Translate("SearchEngineWidget", "Search")</MudText>
            <MudDivider Vertical="true" />
            <MudIconButton Icon="@Icons.Material.Filled.Settings"
                           title="@WebUiLocalizer.Translate("SearchEngineWidget", "Search plugins...")"
                           OnClick="ManagePlugins"
                           data-test-id="@TestIdHelper.For("ManagePluginsButton")" />
            <MudDivider Vertical="true" />
            <MudIconButton Color="Color.Error"
                           Icon="@Icons.Material.Filled.Stop"
                           title="@WebUiLocalizer.Translate("SearchEngineWidget", "Stop")"
                           Disabled="@(ActiveJob?.IsRunning != true)"
                           OnClick="StopActiveJob"
                           data-test-id="@TestIdHelper.For("StopActiveJobButton")" />
            <MudIconButton Color="Color.Primary"
                           Icon="@Icons.Material.Filled.Refresh"
                           title="@WebUiLocalizer.Translate("SearchJobWidget", "Refresh tab")"
                           Disabled="@(ActiveJob is null)"
                           OnClick="RefreshActiveJob"
                           data-test-id="@TestIdHelper.For("RefreshActiveJobButton")" />
            <MudIconButton Color="Color.Secondary"
                           Icon="@Icons.Material.Filled.Close"
                           title="@WebUiLocalizer.Translate("SearchJobWidget", "Close tab")"
                           Disabled="@(ActiveJob is null)"
                           OnClick="CloseActiveJob"
                           data-test-id="@TestIdHelper.For("CloseActiveJobButton")" />
            <MudIconButton Color="Color.Default"
                           Icon="@Icons.Material.Filled.Cancel"
                           title="@WebUiLocalizer.Translate("SearchJobWidget", "Close all tabs")"
                           Disabled="@(Jobs.Count == 0)"
                           OnClick="CloseAllJobs"
                           data-test-id="@TestIdHelper.For("CloseAllJobsButton")" />
        </MudToolBar>
    </div>
    <div class="content-panel__body">
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="ma-0 pa-0 content-panel__container">
            <MudMenu @ref="ResultContextMenu"
                     Dense="true"
                     RelativeWidth="DropdownWidth.Ignore"
                     PositionAtCursor="true"
                     ListClass="unselectable"
                     PopoverClass="unselectable">
                <MudMenuItem Icon="@Icons.Material.Filled.Download" Disabled="@(!HasContextResult)" OnClick="DownloadResultFromContext">@WebUiLocalizer.Translate("SearchJobWidget", "Download")</MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Filled.OpenInNew" Disabled="@(!HasContextResult)" OnClick="OpenDescriptionFromContext">@WebUiLocalizer.Translate("SearchJobWidget", "Open description page")</MudMenuItem>
                <MudDivider />
                <MudMenuItem Icon="@Icons.Material.Filled.ContentCopy" Disabled="@(!HasContextResult)" OnClick="CopyNameFromContext">@TranslateCopyAction("Name")</MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Filled.ContentCopy" Disabled="@(!HasContextResult)" OnClick="CopyDownloadLinkFromContext">@TranslateCopyAction("Download link")</MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Filled.ContentCopy" Disabled="@(!HasContextResult)" OnClick="CopyDescriptionLinkFromContext">@TranslateCopyAction("Description page URL")</MudMenuItem>
            </MudMenu>

            <MudStack Row="true" Class="ml-4 mr-4 mt-2 mb-1 align-center search-form-toggle">
                <MudText Typo="Typo.subtitle2">@TranslateSearch("Search filters")</MudText>
                <MudSpacer />
                <MudButton Variant="Variant.Text"
                           Size="Size.Small"
                           StartIcon="@(ShowSearchForm ? Icons.Material.Filled.ExpandLess : Icons.Material.Filled.ExpandMore)"
                           OnClick="ToggleSearchForm"
                           data-test-id="@TestIdHelper.For("ToggleSearchForm")">
                    @(ShowSearchForm ? TranslateSearch("Hide") : TranslateSearch("Show"))
                </MudButton>
            </MudStack>
            <MudCollapse Expanded="ShowSearchForm" data-test-id="@TestIdHelper.For("SearchFormCollapse")">
                <MudCard Elevation="1" Class="ml-4 mr-4 mb-2 search-filters">
                    <MudCardContent>
                        <EditForm Model="Model" OnValidSubmit="DoSearch">
                            <MudGrid>
                                <MudItem xs="12" md="4">
                                    <MudTextField T="string"
                                                  Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Search")"
                                                  Variant="Variant.Outlined"
                                                  ShrinkLabel="true"
                                                  Immediate="true"
                                                  @bind-Value="Model.SearchText"
                                                  data-test-id="@TestIdHelper.For("Criteria")" />
                                </MudItem>
                                <MudItem xs="12" md="3">
                                    <MudSelect T="string"
                                               Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Select category")"
                                               Variant="Variant.Outlined"
                                               ShrinkLabel="true"
                                               Value="@Model.SelectedCategory"
                                               ValueChanged="OnCategoryChanged"
                                               data-test-id="@TestIdHelper.For("CategorySelect")">
                                        @foreach (var category in Categories)
                                        {
                                            <MudSelectItem Value="@category.Key">@category.Value</MudSelectItem>
                                        }
                                    </MudSelect>
                                </MudItem>
                                <MudItem xs="12" md="3">
                                    <MudSelect T="string"
                                               Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Select plugins")"
                                               Variant="Variant.Outlined"
                                               ShrinkLabel="true"
                                               MultiSelection="true"
                                               SelectAll="true"
                                               SelectAllText="@WebUiLocalizer.Translate("SearchEngineWidget", "Only enabled")"
                                               SelectedValues="@Model.SelectedPlugins"
                                               SelectedValuesChanged="OnPluginsChanged"
                                               MultiSelectionTextFunc="PluginsSelectionText"
                                               data-test-id="@TestIdHelper.For("PluginSelect")">
                                        @foreach (var plugin in EnabledPlugins)
                                        {
                                            <MudSelectItem Value="@plugin.Name">@plugin.FullName</MudSelectItem>
                                        }
                                    </MudSelect>
                                </MudItem>
                                <MudItem xs="12" md="2">
                                    <MudStack Spacing="1">
                                        <MudButton ButtonType="ButtonType.Submit"
                                                   FullWidth="true"
                                                   Disabled="@( !CanStartNewSearch )"
                                                   Color="Color.Primary"
                                                   EndIcon="@Icons.Material.Filled.Search"
                                                   Variant="Variant.Filled"
                                                   data-test-id="@TestIdHelper.For("StartSearchButton")">
                                            @WebUiLocalizer.Translate("SearchEngineWidget", "Search")
                                        </MudButton>
                                        <MudButton FullWidth="true"
                                                   Variant="Variant.Text"
                                                   StartIcon="@(ShowAdvancedFilters ? Icons.Material.Filled.ExpandLess : Icons.Material.Filled.ExpandMore)"
                                                   OnClick="ToggleAdvancedFilters"
                                                   data-test-id="@TestIdHelper.For("ToggleAdvancedFilters")">
                                            @(ShowAdvancedFilters ? TranslateSearch("Hide filters") : TranslateSearch("Show filters"))
                                        </MudButton>
                                    </MudStack>
                                </MudItem>
                            </MudGrid>
                            <MudCollapse Expanded="ShowAdvancedFilters" data-test-id="@TestIdHelper.For("AdvancedFiltersCollapse")">
                                <MudGrid Class="mt-2">
                                    <MudItem xs="12" md="4">
                                        <MudTextField T="string"
                                                      Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Filter")"
                                                      Variant="Variant.Outlined"
                                                      ShrinkLabel="true"
                                                      Value="@Model.FilterText"
                                                      ValueChanged="OnFilterTextChanged"
                                                      Immediate="true"
                                                      data-test-id="@TestIdHelper.For("FilterResults")" />
                                    </MudItem>
                                    <MudItem xs="12" md="2">
                                        <MudSelect T="SearchInScope"
                                                   Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Search in:")"
                                                   Variant="Variant.Outlined"
                                                   ShrinkLabel="true"
                                            Value="@Model.SearchIn"
                                            ValueChanged="OnSearchInChanged"
                                            data-test-id="@TestIdHelper.For("SearchInScopeSelect")">
                                            <MudSelectItem Value="@SearchInScope.Everywhere">@WebUiLocalizer.Translate("SearchEngineWidget", "Everywhere")</MudSelectItem>
                                            <MudSelectItem Value="@SearchInScope.Names">@WebUiLocalizer.Translate("SearchEngineWidget", "Torrent names only")</MudSelectItem>
                                        </MudSelect>
                                    </MudItem>
                                    <MudItem xs="12" md="2">
                                        <MudNumericField T="int?"
                                                         Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Seeds:")"
                                                         Variant="Variant.Outlined"
                                                         ShrinkLabel="true"
                                                         Min="0"
                                                         Value="@Model.MinimumSeeds"
                                                         ValueChanged="OnMinimumSeedsChanged"
                                                         Immediate="true"
                                                         data-test-id="@TestIdHelper.For("MinSeeders")" />
                                    </MudItem>
                                    <MudItem xs="12" md="2">
                                        <MudNumericField T="int?"
                                                         Label="@WebUiLocalizer.Translate("SearchEngineWidget", "to")"
                                                         Variant="Variant.Outlined"
                                                         ShrinkLabel="true"
                                                         Min="0"
                                                         Value="@Model.MaximumSeeds"
                                                         ValueChanged="OnMaximumSeedsChanged"
                                                         Immediate="true"
                                                         data-test-id="@TestIdHelper.For("MaxSeeders")" />
                                    </MudItem>
                                </MudGrid>
                                <MudGrid Class="mt-2">
                                    <MudItem xs="12" md="3">
                                        <MudNumericField T="double?"
                                                         Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Size:")"
                                                         Variant="Variant.Outlined"
                                                         ShrinkLabel="true"
                                                         Min="0"
                                                         Value="@Model.MinimumSize"
                                                         ValueChanged="OnMinimumSizeChanged"
                                                         Immediate="true"
                                                         data-test-id="@TestIdHelper.For("MinSize")" />
                                    </MudItem>
                                    <MudItem xs="12" md="1">
                                        <MudSelect T="SearchSizeUnit"
                                                   Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Min size prefix")"
                                                   Variant="Variant.Outlined"
                                                   ShrinkLabel="true"
                                                   Value="@Model.MinimumSizeUnit"
                                                   ValueChanged="OnMinimumSizeUnitChanged">
                                            @foreach (var option in SizeUnitOptionsList)
                                            {
                                                <MudSelectItem Value="@option.Unit">@option.Label</MudSelectItem>
                                            }
                                        </MudSelect>
                                    </MudItem>
                                    <MudItem xs="12" md="3">
                                        <MudNumericField T="double?"
                                                         Label="@WebUiLocalizer.Translate("SearchEngineWidget", "to")"
                                                         Variant="Variant.Outlined"
                                                         ShrinkLabel="true"
                                                         Min="0"
                                                         Value="@Model.MaximumSize"
                                                         ValueChanged="OnMaximumSizeChanged"
                                                         Immediate="true"
                                                         data-test-id="@TestIdHelper.For("MaxSize")" />
                                    </MudItem>
                                    <MudItem xs="12" md="1">
                                        <MudSelect T="SearchSizeUnit"
                                                   Label="@WebUiLocalizer.Translate("SearchEngineWidget", "Max size prefix")"
                                                   Variant="Variant.Outlined"
                                                   ShrinkLabel="true"
                                                   Value="@Model.MaximumSizeUnit"
                                                   ValueChanged="OnMaximumSizeUnitChanged">
                                            @foreach (var option in SizeUnitOptionsList)
                                            {
                                                <MudSelectItem Value="@option.Unit">@option.Label</MudSelectItem>
                                            }
                                        </MudSelect>
                                    </MudItem>
                                </MudGrid>
                            </MudCollapse>
                        </EditForm>
                    </MudCardContent>
                </MudCard>
            </MudCollapse>

            @if (ShowSearchUnavailableMessage)
            {
                <MudAlert Severity="Severity.Error"
                          Elevation="0"
                          Class="ml-4 mr-4 mb-2"
                          data-test-id="@TestIdHelper.For("SearchUnavailableAlert")">
                    @SearchUnavailableMessage
                </MudAlert>
            }
            else if (ShowNoPluginWarning)
            {
                <MudAlert Severity="Severity.Warning"
                          Elevation="0"
                          Class="ml-4 mr-4 mb-2"
                          data-test-id="@TestIdHelper.For("NoPluginAlert")">
                    @TranslateSearch("Enable at least one search plugin to run searches.")
                </MudAlert>
            }

            @if (HasJobs)
            {
                <MudTabs Class="ml-4 mr-4 mb-4"
                         Border="true"
                         ApplyEffectsToContainer="true"
                         @bind-ActivePanelIndex="ActiveTabIndex"
                         data-test-id="@TestIdHelper.For("JobTabs")">
                    @for (var index = 0; index < Jobs.Count; index++)
                    {
                        var job = Jobs[index];
                        <MudTabPanel>
                            <TabContent>
                                <div class="d-flex align-center">
                                    <MudIcon Icon="@GetJobStatusIcon(job)" Color="@GetJobStatusColor(job)" Size="Size.Small" Class="mr-1" data-test-id="@TestIdHelper.For("JobStatusIcon")" />
                                    <MudText Typo="Typo.body2">@job.Pattern</MudText>
                                    <MudText Typo="Typo.caption"
                                             Class="ml-2"
                                             data-test-id="@TestIdHelper.For("JobSummary")">@GetJobResultSummary(job)</MudText>
                                    <MudIconButton Icon="@Icons.Material.Filled.Close"
                                                   Size="Size.Small"
                                                   Color="Color.Inherit"
                                                   Class="ml-2"
                                                   OnClick="@(async () => await CloseJob(job))" />
                                </div>
                            </TabContent>
                        </MudTabPanel>
                    }
                </MudTabs>  

                <DynamicTable @ref="Table"
                              TableId="SearchResults"
                              T="Lantean.QBitTorrentClient.Models.SearchResult"
                              ColumnDefinitions="Columns"
                              Items="Results"
                              MultiSelection="false"
                              SelectOnRowClick="false"
                              OnTableDataContextMenu="HandleResultContextMenu"
                              OnTableDataLongPress="HandleResultLongPress"
                              Class="search-list content-panel__table" />
            }
            else
            {
                <MudPaper Elevation="0" Class="ml-4 mr-4 mb-4 pa-6 d-flex justify-center" data-test-id="@TestIdHelper.For("SearchEmptyState")">
                    <MudStack Spacing="1" Class="text-center">
                        <MudIcon Icon="@Icons.Material.Filled.ManageSearch" Color="Color.Info" Size="Size.Large" />
                        <MudText Typo="Typo.subtitle1"
                                 data-test-id="@TestIdHelper.For("SearchEmptyStateTitle")">@WebUiLocalizer.Translate("SearchEngineWidget", "Start a search above.")</MudText>
                    </MudStack>
                </MudPaper>
            }

        </MudContainer>
    </div>
</div>
