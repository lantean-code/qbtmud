<MudList T="string">
    <MudListItem OnClick="ClearErrors">@LanguageLocalizer.Translate("AppErrorDisplay", "Clear Errors")</MudListItem>
    <MudListItem OnClick="ClearErrorsAndResumeAsync">@LanguageLocalizer.Translate("AppErrorDisplay", "Clear Errors and Resume")</MudListItem>
    <MudDivider />
    @foreach (var error in Errors)
    {
        <MudListItem OnClick="@(e => ShowException(error))">@error.Message</MudListItem>
    }
</MudList>
