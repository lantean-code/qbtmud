@inherits SubmittableDialog

<MudDialog>
    <DialogContent>
        <MudText data-test-id="@TestIdHelper.For("DeleteDialogMessage")">
            Are you sure you want to remove @Count torrent@(Count == 1 ? "" : "s") from the transfer list?
        </MudText>

        <MudGrid>
            <MudItem xs="12">
                <MudCheckBox Label="Also permanently delete the files" @bind-Value="DeleteFiles" LabelPlacement="Placement.End" data-test-id="@TestIdHelper.For("DeleteFiles")" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" data-test-id="@TestIdHelper.For("DeleteDialogCancel")">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" data-test-id="@TestIdHelper.For("DeleteDialogRemove")">Remove</MudButton>
    </DialogActions>
</MudDialog>
