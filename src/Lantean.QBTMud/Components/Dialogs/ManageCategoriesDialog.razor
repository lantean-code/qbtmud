@inject Lantean.QBTMud.Services.Localization.ILanguageLocalizer LanguageLocalizer

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudList T="string">
                    <MudListItem Icon="@Icons.Material.Filled.Add" IconColor="Color.Info" OnClick="AddCategory" data-test-id="@TestIdHelper.For("CategoryAdd")">@LanguageLocalizer.Translate("TransferListWidget", "New...")</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Remove" IconColor="Color.Error" OnClick="RemoveCategory" data-test-id="@TestIdHelper.For("CategoryRemove")">@LanguageLocalizer.Translate("TransferListWidget", "Reset")</MudListItem>
                    <MudDivider />
                    @foreach (var category in Categories)
                    {
                        var categoryRef = category;
                        <MudListItem Icon="@GetIcon(categoryRef)" IconColor="Color.Default" OnClick="@(e => SetCategory(categoryRef))" data-test-id="@TestIdHelper.For($"Category-{categoryRef}")">@categoryRef</MudListItem>
                    }
                </MudList>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
    </DialogActions>
</MudDialog>
