<MudDialog>
    <DialogContent>
        <MudGrid>
            @if (Exception is null)
            {
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Error"
                              data-test-id="@TestIdHelper.For("ExceptionMissingMessage")">
                        Missing error information.
                    </MudAlert>
                </MudItem>
            }
            else
            {
                <MudItem xs="12">
                    <MudField Label="Message"
                              data-test-id="@TestIdHelper.For("ExceptionMessage")">@Exception.Message</MudField>
                </MudItem>
                <MudItem xs="12">
                    <MudField Label="Source"
                              data-test-id="@TestIdHelper.For("ExceptionSource")">@Exception.Source</MudField>
                </MudItem>
                <MudItem xs="12">
                    <MudField Label="Stack Trace"
                              data-test-id="@TestIdHelper.For("ExceptionStackTrace")">
                        <pre class="overflow">
                            @Exception.StackTrace
                        </pre>
                    </MudField>
                </MudItem>
            }
        </MudGrid>
        
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" data-test-id="@TestIdHelper.For("ExceptionClose")">Close</MudButton>
    </DialogActions>
</MudDialog>
