@typeparam T
@inherits SubmittableDialog
@inject Lantean.QBTMud.Services.Localization.ILanguageLocalizer LanguageLocalizer

<MudDialog ContentStyle="mix-width: 400px">
    <DialogContent>
        <MudGrid>
            @foreach (var definition in FilterDefinitions ?? [])
            {
                <MudItem xs="4">
                    <MudField Label="@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Column")">@definition.Column</MudField>
                </MudItem>
                <MudItem xs="3">
                    <MudSelect Label="@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Operator")" T="string" Value="@definition.Operator" ValueChanged="@(v => DefinitionOperatorChanged(definition, v))" data-test-id="@TestIdHelper.For($"FilterOperator-{definition.Column}")">
                        @foreach (var op in Filter.FilterOperator.GetOperatorByDataType(definition.ColumnType))
                        {
                            <MudSelectItem T="string" Value="op">@LanguageLocalizer.Translate("AppFilterOptionsDialog", op)</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="4">
                    <MudTextField Label="@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Value")" T="object" Value="@definition.Value" ValueChanged="@(v => DefinitionValueChanged(definition, v))" data-test-id="@TestIdHelper.For($"FilterValue-{definition.Column}")" />
                </MudItem>
                <MudItem xs="1">
                    <MudIconButton OnClick="@(e => RemoveDefinition(definition))" Icon="@Icons.Material.Outlined.Remove" data-test-id="@TestIdHelper.For($"FilterRemove-{definition.Column}")" />
                </MudItem>
                <MudDivider />
            }
            <MudItem xs="4">
                <MudSelect Label="@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Column")" T="string" ValueChanged="ColumnChanged" data-test-id="@TestIdHelper.For("FilterNewColumn")">
                    @foreach (var propertyName in GetAvailablePropertyNames())
                    {
                        <MudSelectItem T="string" Value="@propertyName" />
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="3">
                <MudSelect Label="@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Operator")" T="string" ValueChanged="OperatorChanged" data-test-id="@TestIdHelper.For("FilterNewOperator")">
                    @if (ColumnType is null)
                    {
                        <MudSelectItem T="string" Value="@("")">@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Please select a column.")</MudSelectItem>
                    }
                    else
                    {
                        foreach (var op in Filter.FilterOperator.GetOperatorByDataType(ColumnType))
                        {
                            <MudSelectItem T="string" Value="op">@LanguageLocalizer.Translate("AppFilterOptionsDialog", op)</MudSelectItem>
                        }
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="4">
                <MudTextField Label="@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Value")" T="string" ValueChanged="ValueChanged" data-test-id="@TestIdHelper.For("FilterNewValue")" />
            </MudItem>
            <MudItem xs="1">
                <MudIconButton OnClick="AddDefinition" Icon="@Icons.Material.Outlined.Add" data-test-id="@TestIdHelper.For("FilterAdd")" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Default" OnClick="Cancel" data-test-id="@TestIdHelper.For("FilterCancel")">@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Cancel")</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Submit" data-test-id="@TestIdHelper.For("FilterSave")">@LanguageLocalizer.Translate("AppFilterOptionsDialog", "Save")</MudButton>
    </DialogActions>
</MudDialog>
