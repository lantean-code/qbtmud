@inherits SubmittableDialog
@inject Lantean.QBTMud.Services.Localization.IWebUiLocalizer WebUiLocalizer

<MudDialog>
    <DialogContent>
        <table width="100%">
            <tbody>
                <tr>
                    <td style="width: 100%"><MudTextField T="string" Label="@WebUiLocalizer.Translate("TrackerListWidget", "Tracker URL:")" Value="@Tracker" ValueChanged="SetTracker" Required Variant="Variant.Outlined" ShrinkLabel="true" data-test-id="@TestIdHelper.For("AddTrackerInput")" /></td>
                    <td><MudIconButton Icon="@Icons.Material.Filled.Add" OnClick="AddTracker" data-test-id="@TestIdHelper.For("AddTrackerAdd")" /></td>
                </tr>
                @foreach (var tracker in Trackers)
                {
                    var trackerRef = tracker;
                    <tr>
                        <td>@tracker</td>
                        <td><MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(e => DeleteTracker(trackerRef))" data-test-id="@TestIdHelper.For($"AddTrackerDelete-{tracker}")" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Default" OnClick="Cancel" data-test-id="@TestIdHelper.For("AddTrackerCancel")">@WebUiLocalizer.Translate("MainWindow", "Cancel")</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Submit" data-test-id="@TestIdHelper.For("AddTrackerSave")">@WebUiLocalizer.Translate("HttpServer", "Add")</MudButton>
    </DialogActions>
</MudDialog>
