@inherits SubmittableDialog
@using Lantean.QBTMud.Helpers
@inject Lantean.QBTMud.Services.Localization.ILanguageLocalizer LanguageLocalizer

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudFocusTrap>
                    <MudTextField @ref="UrlsTextField" Label="@LanguageLocalizer.Translate("AddNewTorrentDialog", "Add torrent links")" Lines="10" @bind-Value="Urls" Variant="Variant.Outlined" ShrinkLabel="true" AutoFocus="true" data-test-id="@TestIdHelper.For("AddTorrentLinkUrls")" />
                </MudFocusTrap>
            </MudItem>
        </MudGrid>
        <AddTorrentOptions @ref="TorrentOptions" ShowCookieOption="false" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Default" OnClick="Cancel" data-test-id="@TestIdHelper.For("AddTorrentLinkClose")">@LanguageLocalizer.Translate("PluginSelectDlg", "Close")</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Submit" data-test-id="@TestIdHelper.For("AddTorrentLinkSubmit")">@LanguageLocalizer.Translate("downloadFromURL", "Download")</MudButton>
    </DialogActions>
</MudDialog>
