@typeparam T
@inherits SubmittableDialog
@inject Lantean.QBTMud.Services.Localization.IWebUiLocalizer WebUiLocalizer

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField T="string" Label="@Label" Value="@GetDisplayValue()" ValueChanged="ValueChanged" Disabled="Disabled" Variant="Variant.Outlined" ShrinkLabel="true" Adornment="@Adornment" AdornmentText="@AdornmentText" data-test-id="@TestIdHelper.For("SliderFieldInput")" />
            </MudItem>
            <MudItem xs="12">
                <MudSlider T="T" ValueLabel="true" Value="@Value" ValueChanged="ValueChanged" Min="@Min" Max="@Max" Disabled="Disabled" data-test-id="@TestIdHelper.For("SliderFieldSlider")">
                    <ValueLabelContent>
                        @if (ValueDisplayFunc is not null)
                        {
                            <MudText Typo="Typo.caption"
                                     data-test-id="@TestIdHelper.For("SliderValueLabel")">@GetValueLabel(ValueDisplayFunc(context.Value))</MudText>
                        }
                        else
                        {
                            <MudText Typo="Typo.caption"
                                     data-test-id="@TestIdHelper.For("SliderValueLabel")">@GetValueLabel(context.Value.ToString())</MudText>
                        }
                    </ValueLabelContent>
                </MudSlider>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" data-test-id="@TestIdHelper.For("SliderFieldCancel")">@WebUiLocalizer.Translate("MainWindow", "Cancel")</MudButton>
        <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" OnClick="Submit" data-test-id="@TestIdHelper.For("SliderFieldSave")">@WebUiLocalizer.Translate("HttpServer", "Save")</MudButton>
    </DialogActions>
</MudDialog>
