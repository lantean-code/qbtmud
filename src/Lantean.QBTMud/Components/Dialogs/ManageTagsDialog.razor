@inject Lantean.QBTMud.Services.Localization.IWebUiLocalizer WebUiLocalizer

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudList T="string">
                    <MudListItem Icon="@Icons.Material.Filled.Add" IconColor="Color.Info" OnClick="AddTag" data-test-id="@TestIdHelper.For("TagAdd")">@WebUiLocalizer.Translate("TransferListWidget", "Add tags")</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Remove" IconColor="Color.Error" OnClick="RemoveAllTags" data-test-id="@TestIdHelper.For("TagRemoveAll")">@WebUiLocalizer.Translate("TransferListWidget", "Remove All")</MudListItem>
                    <MudDivider />
                    @foreach (var tag in Tags)
                    {
                        var tagRef = tag;
                        <MudListItem Icon="@GetIcon(tagRef)" IconColor="Color.Default" OnClick="@(e => SetTag(tagRef))" data-test-id="@TestIdHelper.For($"Tag-{tagRef}")">@tag</MudListItem>
                    }
                </MudList>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
    </DialogActions>
</MudDialog>
