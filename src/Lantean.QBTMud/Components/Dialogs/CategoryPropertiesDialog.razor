@inherits SubmittableDialog
@using Lantean.QBitTorrentClient.Models
@using Lantean.QBTMud.Components.UI

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField Label="Category" @bind-Value="Category" Required Variant="Variant.Outlined" ShrinkLabel="true" data-test-id="@TestIdHelper.For("CategoryPropertiesCategory")" />
            </MudItem>
            <MudItem xs="12">
                <PathAutocomplete Label="Save Path"
                                  @bind-Value="SavePath"
                                  Required="true"
                                  RequiredErrorText="Save path is required."
                                  Mode="DirectoryContentMode.Directories"
                                  data-test-id="@TestIdHelper.For("CategoryPropertiesSavePath")" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" data-test-id="@TestIdHelper.For("CategoryPropertiesCancel")">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" data-test-id="@TestIdHelper.For("CategoryPropertiesSave")">Add</MudButton>
    </DialogActions>
</MudDialog>
