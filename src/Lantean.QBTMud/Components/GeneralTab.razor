<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="details-tab-contents">
    <MudText Typo="Typo.subtitle2" Class="pt-6">@TranslateProperties("Progress:")</MudText>
    <PiecesProgressSvg Pieces="Pieces" Hash="@Hash" PiecesLoading="PiecesLoading" PiecesFailed="PiecesFailed" />
    <MudText Typo="Typo.subtitle2" Class="pt-6">@TranslateProperties("Transfer")</MudText>
    <MudGrid>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Time Active:")">@DisplayHelpers.Duration(Properties?.TimeElapsed)</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("ETA:")">@DisplayHelpers.Duration(Properties?.EstimatedTimeOfArrival)</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Connections:")">@FormatWithDetail(DisplayHelpers.EmptyIfNull(Properties?.Connections), DisplayHelpers.EmptyIfNull(Properties?.ConnectionsLimit), "%1 (%2 max)")</MudField>
        </MudItem>

        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Downloaded:")">@FormatWithDetail(DisplayHelpers.Size(Properties?.TotalDownloaded), DisplayHelpers.Size(Properties?.TotalDownloadedSession), "%1 (%2 this session)")</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Uploaded:")">@FormatWithDetail(DisplayHelpers.Size(Properties?.TotalUploaded), DisplayHelpers.Size(Properties?.TotalUploadedSession), "%1 (%2 this session)")</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Seeds:")">@FormatWithDetail(DisplayHelpers.EmptyIfNull(Properties?.Seeds), DisplayHelpers.EmptyIfNull(Properties?.SeedsTotal), "%1 (%2 total)")</MudField>
        </MudItem>

        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Download Speed:")">@FormatWithDetail(DisplayHelpers.Speed(Properties?.DownloadSpeed), DisplayHelpers.Speed(Properties?.DownloadSpeedAverage), "%1 (%2 avg.)")</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Upload Speed:")">@FormatWithDetail(DisplayHelpers.Speed(Properties?.UploadSpeed), DisplayHelpers.Speed(Properties?.UploadSpeedAverage), "%1 (%2 avg.)")</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Peers:")">@FormatWithDetail(DisplayHelpers.EmptyIfNull(Properties?.Peers), DisplayHelpers.EmptyIfNull(Properties?.PeersTotal), "%1 (%2 total)")</MudField>
        </MudItem>

        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Download Limit:")">@DisplayHelpers.Speed(Properties?.DownloadLimit)</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Upload Limit:")">@DisplayHelpers.Speed(Properties?.UploadLimit)</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Wasted:")">@DisplayHelpers.Size(Properties?.TotalWasted)</MudField>
        </MudItem>

        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Share Ratio:")">@Properties?.ShareRatio.ToString("0.00")</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Reannounce In:")">@DisplayHelpers.Duration(Properties?.Reannounce)</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Last Seen Complete:")">@DisplayHelpers.DateTime(Properties?.LastSeen, TranslateProperties("Never"))</MudField>
        </MudItem>

    </MudGrid>

    <MudText Typo="Typo.subtitle2" Class="pt-6">@TranslateProperties("Information")</MudText>
    <MudGrid>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Total Size:")">@DisplayHelpers.Size(Properties?.TotalSize)</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Pieces:")">
                @if (Properties is not null)
                {
                    <text>@TranslateProperties("%1 x %2 (have %3)", Properties.PiecesNum, DisplayHelpers.Size(Properties.PieceSize), Properties.PiecesHave)</text>
                }
            </MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Created By:")">@Properties?.CreatedBy</MudField>
        </MudItem>

        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Added On:")">@DisplayHelpers.DateTime(Properties?.AdditionDate)</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Completed On:")">@DisplayHelpers.DateTime(Properties?.CompletionDate)</MudField>
        </MudItem>
        <MudItem xs="4">
            <MudField Label="@TranslateProperties("Created On:")">@DisplayHelpers.DateTime(Properties?.CreationDate)</MudField>
        </MudItem>

        <MudItem xs="12">
            <MudField Label="@TranslateProperties("Info Hash v1:")">@Properties?.InfoHashV1</MudField>
        </MudItem>

        <MudItem xs="12">
            <MudField Label="@TranslateProperties("Info Hash v2:")">@Properties?.InfoHashV2</MudField>
        </MudItem>

        <MudItem xs="12">
            <MudField Label="@TranslateProperties("Save Path:")">@Properties?.SavePath</MudField>
        </MudItem>

        <MudItem xs="12">
            <MudField Label="@TranslateProperties("Comment:")">@Properties?.Comment</MudField>
        </MudItem>
    </MudGrid>
</MudContainer>
