<MudTooltip Text="@Text"
            TooltipContent="@TooltipContent"
            Color="@Color"
            Arrow="@Arrow"
            Duration="@Duration"
            Delay="@Delay"
            Placement="@Placement"
            Inline="@Inline"
            RootStyle="@RootStyle"
            RootClass="@RootClass"
            ShowOnHover="@EffectiveShowOnHover"
            ShowOnFocus="@EffectiveShowOnFocus"
            ShowOnClick="@EffectiveShowOnClick"
            Visible="@Visible"
            VisibleChanged="@VisibleChanged"
            Disabled="@Disabled"
            @attributes="AdditionalAttributes">
    @ChildContent
</MudTooltip>
