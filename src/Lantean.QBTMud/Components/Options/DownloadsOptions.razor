            </MudItem>
            <MudItem xs="12">
                <MudTextField T="string" Label="@WebUiLocalizer.Translate("OptionsDialog", "Excluded file names")" Value="ExcludedFileNames" ValueChanged="ExcludedFileNamesChanged" Lines="5" Disabled="@(!ExcludedFileNamesEnabled)" Variant="Variant.Outlined" ShrinkLabel="true" Immediate="true" DebounceInterval="300" data-test-id="@TestIdHelper.For("ExcludedFileNames")" />
