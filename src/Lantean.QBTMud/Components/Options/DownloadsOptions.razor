                <FieldSwitch Label="@WebUiLocalizer.Translate("OptionsDialog", "This server requires a secure connection (SSL)")" Value="MailNotificationSslEnabled" ValueChanged="MailNotificationSslEnabledChanged" Disabled="@(!MailNotificationEnabled)" data-test-id="@TestIdHelper.For("MailNotificationSslEnabled")" />
