@inherits Options

<MudCard Elevation="1" Class="ml-4 mr-4 mb-4 mt-4">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.subtitle2">@LanguageLocalizer.Translate("OptionsDialog", "RSS Reader")</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="pt-0">
        <MudGrid>
            <MudItem xs="12">
                <FieldSwitch Label="@LanguageLocalizer.Translate("OptionsDialog", "Enable fetching RSS feeds")" Value="RssProcessingEnabled" ValueChanged="RssProcessingEnabledChanged" data-test-id="@TestIdHelper.For("RssProcessingEnabled")" />
            </MudItem>
            <MudItem xs="12">
                <MudNumericField T="int" Label="@LanguageLocalizer.Translate("OptionsDialog", "Feeds refresh interval:")" Value="RssRefreshInterval" ValueChanged="RssRefreshIntervalChanged" Min="0" Variant="Variant.Outlined" ShrinkLabel="true" Adornment="Adornment.End" AdornmentText="@LanguageLocalizer.Translate("OptionsDialog", "min")" Immediate="true" DebounceInterval="300" data-test-id="@TestIdHelper.For("RssRefreshInterval")" />
            </MudItem>
            <MudItem xs="12">
                <MudNumericField T="int" Label="@LanguageLocalizer.Translate("OptionsDialog", "Maximum number of articles per feed:")" Value="RssMaxArticlesPerFeed" ValueChanged="RssMaxArticlesPerFeedChanged" Min="0" Variant="Variant.Outlined" ShrinkLabel="true" Immediate="true" DebounceInterval="300" data-test-id="@TestIdHelper.For("RssMaxArticlesPerFeed")" />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Elevation="1" Class="ml-4 mr-4 mb-4">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.subtitle2">@LanguageLocalizer.Translate("OptionsDialog", "RSS Torrent Auto Downloader")</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="pt-0">
        <MudGrid>
            <MudItem xs="12">
                <FieldSwitch Label="@LanguageLocalizer.Translate("OptionsDialog", "Enable auto downloading of RSS torrents")" Value="RssAutoDownloadingEnabled" ValueChanged="RssAutoDownloadingEnabledChanged" data-test-id="@TestIdHelper.For("RssAutoDownloadingEnabled")" />
            </MudItem>
            <MudItem xs="12">
                <MudButton OnClick="OpenRssRulesDialog"
                           Variant="Variant.Filled"
                           data-test-id="@TestIdHelper.For("EditRssRules")">@LanguageLocalizer.Translate("OptionsDialog", "Edit auto downloading rules...")</MudButton>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Elevation="1" Class="ml-4 mr-4 mb-4">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.subtitle2">@LanguageLocalizer.Translate("OptionsDialog", "RSS Smart Episode Filter")</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="pt-0">
        <MudGrid>
            <MudItem xs="12">
                <FieldSwitch Label="@LanguageLocalizer.Translate("OptionsDialog", "Download REPACK/PROPER episodes")" Value="RssDownloadRepackProperEpisodes" ValueChanged="RssDownloadRepackProperEpisodesChanged" data-test-id="@TestIdHelper.For("RssDownloadRepackProperEpisodes")" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField T="string" Label="@LanguageLocalizer.Translate("OptionsDialog", "Filters:")" Value="RssSmartEpisodeFilters" ValueChanged="RssSmartEpisodeFiltersChanged" Lines="5" Variant="Variant.Outlined" ShrinkLabel="true" Immediate="true" DebounceInterval="300" Style="font-family: monospace;" data-test-id="@TestIdHelper.For("RssSmartEpisodeFilters")" />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
